<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/ClothImgView"
        android:layout_width="230dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toTopOf="@+id/tvAdvancedName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ClothImgHeart"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ClothImgView"
        app:layout_constraintEnd_toStartOf="@+id/ClothImgGear"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ClothImgView"
        app:layout_constraintTop_toTopOf="@+id/ClothImgView"
        app:layout_constraintVertical_bias="0.973"
        app:srcCompat="@drawable/heartico" />

    <ImageView
        android:id="@+id/ClothImgGear"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/ClothImgView"
        app:layout_constraintEnd_toEndOf="@+id/ClothImgView"
        app:layout_constraintTop_toBottomOf="@+id/ClothImgInfo"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/gear" />

    <ImageView
        android:id="@+id/ClothImgInfo"
        android:layout_width="44dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="@+id/ClothImgView"
        app:layout_constraintTop_toTopOf="@+id/ClothImgView"
        app:srcCompat="@drawable/info" />

    <TextView
        android:id="@+id/tvClothImgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ClothImgView"
        app:layout_constraintStart_toStartOf="@+id/ClothImgView"
        app:layout_constraintTop_toBottomOf="@+id/ClothImgView" />

    <ImageView
        android:id="@+id/ivClothImgProgram"
        android:layout_width="136dp"
        android:layout_height="119dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/ClothImgView"
        app:layout_constraintEnd_toEndOf="@+id/ClothImgView"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/ClothImgView"
        app:layout_constraintTop_toTopOf="@+id/ClothImgView"
        app:layout_constraintVertical_bias="0.145"
        app:srcCompat="@drawable/shirt_cartoon_deault" />

</android.support.constraint.ConstraintLayout>