<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_background"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/description_info"
        app:layout_constraintTop_toBottomOf="@+id/prewash_info" />

    <TextView
        android:id="@+id/dryer_bool"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/text_background"
        android:text="@string/dryer_bool"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/dryer_info"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prewash_bool"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/text_background"
        android:text="@string/prewash_bool"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/prewash_info"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eco_bool"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_background"
        android:text="@string/eco_bool"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/eco_info"
        app:layout_constraintTop_toBottomOf="@+id/times" />

    <TextView
        android:id="@+id/times"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_background"
        android:text="@string/time_bool"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/time_bool"
        app:layout_constraintTop_toBottomOf="@+id/temps" />

    <ImageView
        android:id="@+id/program_image"
        android:layout_width="207dp"
        android:layout_height="136dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shirt_cartoon_deault" />

    <TextView
        android:id="@+id/rpm_bool"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/rpm_info"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_bool"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/temp_info"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rpm_bool" />

    <TextView
        android:id="@+id/time_bool"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/time_info"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_bool" />

    <Button
        android:id="@+id/ok_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ok_info"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/eco_info"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/eco_info"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_bool" />

    <TextView
        android:id="@+id/prewash_info"
        android:layout_width="94dp"
        android:layout_height="31dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="178dp"
        android:text="@string/prewash_info"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/eco_bool"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dryer_info"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="178dp"
        android:text="@string/dryer_info"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/prewash_bool"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/description_info"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eco_info" />

    <TextView
        android:id="@+id/rpms"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_background"
        android:text="@string/rpm_bool"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rpm_bool"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temps"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_background"
        android:text="@string/temp_bool"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/temp_bool"
        app:layout_constraintTop_toBottomOf="@+id/rpms" />
</android.support.constraint.ConstraintLayout>